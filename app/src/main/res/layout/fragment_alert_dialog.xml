<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:gravity="center"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:textColor="@color/txtColor"
        android:textSize="@dimen/txt_button" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:divider="@drawable/divider_line_gray"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:baselineAligned="false">

        <com.weijie.vr4dream.ui.widget.MaterialRippleLayout
            android:id="@+id/rlEnsure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:mrl_rippleBackground="@android:color/white">

            <TextView
                android:id="@+id/btEnsure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/login_later"
                android:textColor="@color/txtColor"
                android:textSize="@dimen/txt_button" />
        </com.weijie.vr4dream.ui.widget.MaterialRippleLayout>

        <com.weijie.vr4dream.ui.widget.MaterialRippleLayout
            android:id="@+id/rlCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:mrl_rippleBackground="@android:color/white">

            <TextView
                android:id="@+id/btCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/login_now"
                android:textColor="@color/btnEnablePress"
                android:textSize="@dimen/txt_button" />
        </com.weijie.vr4dream.ui.widget.MaterialRippleLayout>

    </LinearLayout>

</LinearLayout>
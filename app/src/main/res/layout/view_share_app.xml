<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vr="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:gravity="center_horizontal"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/txt_title"
            android:textColor="@color/txtColor"
            android:text="推荐应用给好友"/>

        <ImageView
            android:id="@+id/btn_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="15dp"
            android:src="@mipmap/close"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@mipmap/ic_download_code"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/txt_tips_small"
        android:textColor="@color/txtColor"
        android:text="扫描二维码下载app"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0.5dp"
            android:background="#ddd"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_content"
            android:textColor="@color/txtColor"
            android:text="分享到"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0.5dp"
            android:background="#ddd"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <com.weijie.vr4dream.ui.widget.IconTextView
            android:id="@+id/btn_blog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            vr:input_left="@mipmap/third_blog"
            vr:input_txt="新浪微博">
        </com.weijie.vr4dream.ui.widget.IconTextView>
        <com.weijie.vr4dream.ui.widget.IconTextView
            android:id="@+id/btn_qq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            vr:input_left="@mipmap/third_qq"
            vr:input_txt="QQ">
        </com.weijie.vr4dream.ui.widget.IconTextView>
        <com.weijie.vr4dream.ui.widget.IconTextView
            android:id="@+id/btn_space"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            vr:input_left="@mipmap/third_qq_space"
            vr:input_txt="QQ空间">
        </com.weijie.vr4dream.ui.widget.IconTextView>
        <com.weijie.vr4dream.ui.widget.IconTextView
            android:id="@+id/btn_wechat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            vr:input_left="@mipmap/third_wechat"
            vr:input_txt="微信好友">
        </com.weijie.vr4dream.ui.widget.IconTextView>
        <com.weijie.vr4dream.ui.widget.IconTextView
            android:id="@+id/btn_circle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            vr:input_left="@mipmap/third_friend_circle"
            vr:input_txt="朋友圈">
        </com.weijie.vr4dream.ui.widget.IconTextView>

    </LinearLayout>

</LinearLayout>
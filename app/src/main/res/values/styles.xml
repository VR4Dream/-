<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/bgGray</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemTextAppearance">@style/PopupMenuStyle</item>
        <item name="android:windowAnimationStyle">@style/ActivitySwitchAnimation</item>
    </style>

    <!-- activity switch animation -->
    <style name="ActivitySwitchAnimation" parent="android:Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- activity switch animation -->
    <style name="view_anim">
        <item name="@android:windowEnterAnimation">@anim/alpha_enter</item>
        <item name="@android:windowExitAnimation">@anim/alpha_exit</item>
    </style>

    <!-- base dialog -->
    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:textSize">@dimen/txt_content</item>
        <item name="android:textColor">@color/txtColor</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <!-- custom dialog -->
    <style name="ProgressDialog" parent="@style/BaseDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="PopupMenuStyle">
        <item name="android:textColor">@color/txtColor</item>
        <item name="android:textSize">@dimen/txt_content</item>
    </style>

    <style name="DetailPopupMenuStyle" parent="PopupMenuStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:background">@drawable/selector_menu_button</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- 用户页面按钮样式 -->
    <style name="MineLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/block_padding</item>
        <item name="android:paddingRight">@dimen/block_padding</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MineBlockView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/normal_view_height</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/txtColor</item>
        <item name="android:textSize">@dimen/txt_content</item>
    </style>

    <style name="MineBlockViewClick" parent="@style/MineBlockView">
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <!-- 侧滑菜单样式 -->
    <style name="SlidingMenu01">
        <item name="android:layout_width">@dimen/slidingmenu_width</item>
        <item name="android:layout_height">@dimen/normal_view_height</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/txtColor</item>
        <item name="android:textSize">@dimen/txt_button</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SlidingMenu02" parent="@style/SlidingMenu01">
        <item name="android:layout_marginTop">@dimen/menu_diver</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">@dimen/txt_tips</item>
    </style>

    <style name="MultiRadioGroup">
        <item name="android:layout_width">@dimen/slidingmenu_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">@dimen/block_padding</item>
    </style>

    <style name="MultiRadioGroupSmall" parent="MultiRadioGroup">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="MultiRadioGroupLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MultiRadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_radiobutton</item>
        <item name="android:textColor">@color/selector_gray_green_txt</item>
        <item name="android:textSize">@dimen/txt_content</item>
    </style>

    <style name="MultiRadioButtonSmall" parent="MultiRadioButton">
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">@dimen/txt_tips_small</item>
    </style>

    <style name="MultiCheckBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_radiobutton</item>
        <item name="android:textColor">@color/selector_gray_green_txt</item>
        <item name="android:textSize">@dimen/txt_content</item>
    </style>

    <!-- 用户信息菜单样式 -->
    <style name="InfoView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/block_padding</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/selector_gray_green_txt</item>
        <item name="android:textSize">@dimen/txt_content</item>
    </style>

    <style name="TextSearch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/txtColor</item>
        <item name="android:textSize">@dimen/txt_tips</item>
    </style>

    <style name="dialog_setting"  parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>//背景设置为透明
    </style>

    <!--控制dialog进出动画-->
    <style name="dialog_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="@android:windowExitAnimation">@anim/slide_out_right</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--控制dialog进出动画-->
    <style name="dialog_animation_down" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="@android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!--控制dialog进出动画-->
    <style name="dialog_animation_center" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/alpha_enter</item>
        <item name="@android:windowExitAnimation">@anim/alpha_exit</item>
    </style>




</resources>
